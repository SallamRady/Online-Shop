<div class="container">
  <div class="row">
    <div class="col col-12">
      <form class="d-flex" action="/" method="get">
        <select
          name="category"
          class="form-select w-25 mr-3"
          aria-label="Select Category"
        >
          <option value="all">All Products</option>
          <option value="clothes">Clothes</option>
          <option value="phones">Phones</option>
          <option value="computers">Computers</option>
        </select>
        <input type="submit" value="Filter" class="btn btn-info ml-2" />
      </form>
    </div>
      <% for (const product of products) {%>
        <div class="col-12 col-md-6 col-lg-4 col-xl-3">
          <div class="card p-2 m-2" style="width: 350;" >
            <img src="<%= product.image %>" width="90%" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <a href="#" class="btn btn-primary">Product Details</a>
            </div>
          </div>
        </div>
      <%} %>
    
  </div>
</div>
